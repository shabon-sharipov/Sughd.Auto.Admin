<MudNavMenu Rounded="true"
            Color="Color.Primary"
            Class="m-2">
    <MudStack Spacing="2">
        <MudNavLink Href="/"
                    IconColor="Color.Inherit"
                    Icon="fas fa-chart-line"
                    Match="NavLinkMatch.All">
            Dashboard
        </MudNavLink>
        <MudNavLink Href="/counter"
                    IconColor="Color.Inherit"
                    Icon="@Icons.Material.Rounded.Widgets"
                    Match="NavLinkMatch.All">
            Counter
        </MudNavLink>
        <MudNavGroup Title="Registration cars"
                     Icon="@Icons.Material.Filled.DirectionsCarFilled"
                     Expanded="false">
            <MudNavLink Href="@PageBlazor.CARS">Cars</MudNavLink>
            <MudNavLink Href="@PageBlazor.MARKA">Marka</MudNavLink>
            <MudNavLink Href="/Model">Model</MudNavLink>
        </MudNavGroup>
        <MudNavLink Href="/Users"
                    IconColor="Color.Inherit"
                    Icon="@Icons.Material.Filled.People"
                    Match="NavLinkMatch.All">
            Users
        </MudNavLink>
        <MudNavGroup Icon="@Icons.Material.Rounded.VerifiedUser"
                     Title="Authentication"
                     HideExpandIcon="true">
            <MudStack Spacing="2"
                      Class="my-2">
                <MudNavLink Href="/login"
                            IconColor="Color.Inherit"
                            Icon="@Icons.Material.Rounded.Person"
                            Match="NavLinkMatch.All">
                    Login
                </MudNavLink>
                <MudNavLink Href="/register"
                            IconColor="Color.Inherit"
                            Icon="@Icons.Material.Rounded.HowToReg"
                            Match="NavLinkMatch.All">
                    Register
                </MudNavLink>
            </MudStack>
        </MudNavGroup>
        <MudNavLink Href="/profile"
                    IconColor="Color.Inherit"
                    Icon="@Icons.Material.Rounded.Person"
                    Match="NavLinkMatch.All">
            Profile
        </MudNavLink>
    </MudStack>
</MudNavMenu>

@code {
    private bool collapseNavMenu = true;

    private string ? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
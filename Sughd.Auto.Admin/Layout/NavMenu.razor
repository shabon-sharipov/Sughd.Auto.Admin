<MudNavMenu Rounded="true"
            Color="Color.Primary"
            Class="m-2">
    <MudStack Spacing="2">
        <MudNavLink Href="/"
                    IconColor="Color.Inherit"
                    Icon="@Icons.Material.Filled.SpaceDashboard"
                    Match="NavLinkMatch.All">
            Dashboard
        </MudNavLink>
        <AuthorizeView Roles="Admin, Moderator, Worker">
            <MudNavGroup Title="Registration cars"
                         Icon="@Icons.Material.Filled.DirectionsCarFilled"
                         Expanded="false">
                <MudNavLink Href="@PageBlazor.CARS">Cars</MudNavLink>
                <MudNavLink Href="@PageBlazor.MARKA">Marka</MudNavLink>
                <MudNavLink Href="/Model">Model</MudNavLink>
            </MudNavGroup>
        </AuthorizeView>
        <AuthorizeView Roles="Admin, Moderator">
            <MudNavLink Href="/Users"
                        IconColor="Color.Inherit"
                        Icon="@Icons.Material.Filled.People"
                        Match="NavLinkMatch.All">
                Users
            </MudNavLink>
            <MudNavGroup Icon="@Icons.Material.Rounded.VerifiedUser"
                         Title="Authentication"
                         HideExpandIcon="true">
                <MudStack Spacing="2"
                          Class="my-2">
                    <MudNavLink Href="/register"
                                IconColor="Color.Inherit"
                                Icon="@Icons.Material.Rounded.HowToReg"
                                Match="NavLinkMatch.All">
                        Register
                    </MudNavLink>
                </MudStack>
            </MudNavGroup>
        </AuthorizeView>
        <MudNavLink Href="/profile"
                    IconColor="Color.Inherit"
                    Icon="@Icons.Material.Rounded.Person"
                    Match="NavLinkMatch.All">
            Profile
        </MudNavLink>
    </MudStack>
</MudNavMenu>

@code {
    private bool collapseNavMenu = true;

    private string ? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
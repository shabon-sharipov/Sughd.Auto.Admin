<MudNavMenu Rounded="true"
            Color="Color.Primary"
            Class="m-2">
    <MudStack Spacing="2">
        <MudNavLink Href="/"
                    IconColor="Color.Inherit"
                    Icon="@Icons.Material.Filled.Home"
                    Match="NavLinkMatch.All">
            Home
        </MudNavLink>
        <AuthorizeView Roles="Admin, Moderator, Worker">
            <MudNavLink Href="/dashboard"
                        IconColor="Color.Inherit"
                        Icon="@Icons.Material.Filled.SpaceDashboard"
                        Match="NavLinkMatch.All">
                Панель приборов
            </MudNavLink>
            <MudNavGroup Title="Registration cars"
                         Icon="@Icons.Material.Filled.DirectionsCarFilled"
                         Expanded="false">
                <MudNavLink Href="@PageBlazor.CARS">Легковые автомобили</MudNavLink>
                <MudNavLink Href="@PageBlazor.MARKA">Марка</MudNavLink>
                <MudNavLink Href="/Model">Модел</MudNavLink>
            </MudNavGroup>
        </AuthorizeView>
        <AuthorizeView Roles="Admin, Moderator">
            <MudNavLink Href="/Users"
                        IconColor="Color.Inherit"
                        Icon="@Icons.Material.Filled.People"
                        Match="NavLinkMatch.All">
                Пользователи
            </MudNavLink>
            <MudNavGroup Icon="@Icons.Material.Rounded.VerifiedUser"
                         Title="Аутентификация"
                         HideExpandIcon="true">
                <MudStack Spacing="2"
                          Class="my-2">
                    <MudNavLink Href="/register"
                                IconColor="Color.Inherit"
                                Icon="@Icons.Material.Rounded.HowToReg"
                                Match="NavLinkMatch.All">
                        Регистр
                    </MudNavLink>
                </MudStack>
            </MudNavGroup>
            <MudNavLink Href="/CarsForPtintPDFFormat"
                        IconColor="Color.Inherit"
                        Icon="@Icons.Material.Filled.PictureAsPdf"
                        Match="NavLinkMatch.All">
                PDF
            </MudNavLink>
        </AuthorizeView>
    </MudStack>
</MudNavMenu>

@code {
    private bool collapseNavMenu = true;

    private string ? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}